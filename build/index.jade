doctype html
html(lang="en")
	head
		title At Some Point, This Tree Will Fall
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='viewport', content='minimal-ui')
		meta(name="apple-mobile-web-app-capable", content="yes")
		
		meta(property="og:type", content="website")
		meta(property="og:title", content="At Some Point, This Tree Will Fall")
		meta(property="og:url", content="http://at-some-point-this-tree-will-fall.jack-wild.com")
		meta(property="og:description", content="Escape information-overload and wait for a non-event. Sure, it might not really happen—but hey—who cares...(?)")
		meta(property="og:image", content="http://at-some-point-this-tree-will-fall.jack-wild.com/assets/sharing-card.jpg")

		meta(name="twitter:card", content="summary_large_image")
