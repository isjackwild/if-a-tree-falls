		link(href="https://fonts.googleapis.com/css?family=Abel", rel="stylesheet")
		link(href='css/main.css', rel='stylesheet')

	body
		canvas.canvas

		span.fps
		span.show-notes Notes
		span.mute
			span.mute__unmute Unmute
			span.mute__mute Mute
		section.notes.notes--hidden
			main.notes__inner
				div.notes__inner-text
					p Escape information-overload and wait for a non-event. Sure, it might not <i>really</i> happen—but hey—who cares...(?)
					p Jack Wild, 2018
			span.hide-notes Close


		script(type='text/javascript').
			window.treeFallVector = !{treeFallVector};
			
		script(src='js/three.min.js')
		script(src='js/DeviceOrientationControls.js')
		script(src='js/OrbitControls.js')
		script(src='js/StereoEffect.js')
		script(src='js/WebVR.js')
		script(src='js/ViveController.js')
		script(src='js/inflate.min.js')
		script(src='js/FBXLoader.js')
		script(src='js/curves/NURBSCurve.js')
